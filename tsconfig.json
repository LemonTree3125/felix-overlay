{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "types": ["node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true
  },
  "include": ["electron/**/*.ts", "src/**/*.ts", "src/**/*.tsx", "electron.vite.config.ts"],
  "exclude": ["dist", "node_modules"]
}
